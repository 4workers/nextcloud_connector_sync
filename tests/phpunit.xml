<phpunit bootstrap="../../../tests/bootstrap.php" colors="true">
	<log type="coverage-clover" target="../build/php-unit.coverage.xml"/>
	<testsuites>
		<testsuite name="unit">
			<directory>./unit</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory suffix=".php">./../lib</directory>
		</whitelist>
	</filter>
</phpunit>
